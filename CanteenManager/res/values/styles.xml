<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="MyTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/my_white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MyEditStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/my_white</item>
    </style>
    <color name="my_white">#ffffffff</color>
	<color name="my_gray">#bb1fb0df</color>
	<color name="my_light_gray">#ee70d5f5</color>
	<color name="my_login_bg">#eeffffff</color>
	<style name="MainIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>
	<style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/menu_tab_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">8dp</item>  
       	<item name="android:paddingRight">8dp</item>  
       	<item name="android:paddingTop">5dp</item> 
       	<item name="android:fadingEdge">horizontal</item>  
	   	<item name="android:fadingEdgeLength">8dp</item>  
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="MoreBnStyle">
        <item name="android:textColor">@color/my_white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
