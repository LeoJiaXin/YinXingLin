<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <ListView
       android:id="@+id/menu_face"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <RelativeLayout 
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/more"
            android:background="@drawable/login_style"
            style="@style/MyTextStyle"
            />
        <ImageView
            android:id="@+id/loading_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_cell_zan"
			android:layout_toLeftOf="@id/loading_tip"
            android:contentDescription="@drawable/menu_cell_zan"
            />      
    </RelativeLayout>

</LinearLayout>